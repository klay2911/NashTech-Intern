<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Library Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/LibraryManagement.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid"> 
            <a class="navbar-brand" asp-controller="BorrowingRequest" asp-action="ViewBorrowingRequests">Library Management</a> 
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon"></span>
            </button>  
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">  
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Book" asp-action="Index">Book</a>  
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Category</a>  
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="BorrowingRequest" asp-action="Report">Report</a>  
                    </li>
                </ul>  
                <form class="search">
                    <input type="text" id="search_input" placeholder="Search...">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>  
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">  
    Welcome, @User.Identity.Name  
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="@Url.Action("ChangeInformation", "Account")">Information</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")">Change Password</a></li>  
                    <li>
                        <form asp-action="Logout" asp-controller="Account" method="post">
                            <button type="submit" class="btn btn-danger dropdown-item" style="color: #bb2d3b;"> Logout <i class="bi bi-box-arrow-right"></i>
                            </button> 
                            </form>  
                    </li>
                </ul>  
            </div>
        </div>  
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - Library Management 
    </div>
</footer>
<script>
$('#search_input').on('keyup', function() { // Use the same id as the input
        var value = $(this).val().toLowerCase();
        $('table tbody tr').filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });
</script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
header {
    box-shadow: 0 4px 2px -2px rgba(0, 0, 0, 0.1);
}
.search {
  display: flex; /* Use flexbox layout */
  align-items: center; /* Align the items vertically */
  justify-content: center; /* Align the items horizontally */
}

.search input[type=text] {
  width: 300px; /* Set the width */
  height: 30px; /* Set the height */
  border: none; /* Remove the border */
  border-radius: 15px; /* Add some border radius */
  padding: 5px 10px; /* Add some padding */
  margin: 0 10px; /* Add some margin */
  outline: gray; /* Remove the outline */
  box-shadow: 0 0 15px rgba(0,0,0,0.3); /* Add some shadow */
}

.search button {
  width: 40px; /* Set the width */
  height: 40px; /* Set the height */
  border: none; /* Remove the border */
  border-radius: 50%; /* Make the button circular */
  background-color: transparent; /* Make the background transparent */
  color: white; /* Set the text color */
  cursor: pointer; /* Change the cursor to pointer */
  outline: none; /* Remove the outline */
  position: absolute; /* Position the button absolutely */
  right: 25px; /* Move the button to the right */
  box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Add some shadow */
}

/* Style the search icon */
.search i {
  font-size: 20px; /* Set the font size */
}

</style>