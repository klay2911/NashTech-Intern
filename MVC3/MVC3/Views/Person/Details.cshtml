@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MVC3.Models.Person
@{
    ViewData["Title"] = "Details person";
}

<h1>This is Details person page</h1>
<h4>Person</h4>
<hr/>
<div class="row">
    <div class ="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden" readonly/>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" readonly/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" readonly/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" readonly/>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dob" class="control-label"></label>
                <input asp-for="Dob" class="form-control" readonly/>
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthPlace" class="control-label"></label>
                <input asp-for="BirthPlace" class="form-control" readonly/>
                <span asp-validation-for="BirthPlace" class="text-danger"></span>
            </div>
        </form>
        <form asp-action="Edit" asp-route-id="@Model.Id" method="get">
            <input type="submit" value="Edit" />
        </form>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <input type="submit" value="Delete" />
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


